		<field name="cellphone"
		       label="COM_CENTRALSMS_RECIPIENT_CELLPHONE_LABEL"
		       description="COM_CENTRALSMS_RECIPIENT_CELLPHONE_DESC"
		       class="inputbox required validate-numeric foxtext"
		       default=""
		       maxlength="100"
		       size="22"
		       type="text" />
