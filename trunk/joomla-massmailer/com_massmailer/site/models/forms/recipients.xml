<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id"
		       type="hidden"/>
		<field name="firstname"
		       label="COM_MASSMAILER_RECIPIENT_FIRSTNAME_LABEL"
		       description="COM_MASSMAILER_RECIPIENT_FIRSTNAME_DESC"
		       class="inputbox required foxtext"
		       default=""
		       maxlength="100"
		       size="40"
		       type="text" />
		<field name="lastname"
		       label="COM_MASSMAILER_RECIPIENT_LASTNAME_LABEL"
		       description="COM_MASSMAILER_RECIPIENT_LASTNAME_DESC"
		       class="inputbox required foxtext"
		       default=""
		       maxlength="100"
		       size="40"
		       type="text" />
		<field name="email"
		       label="COM_MASSMAILER_RECIPIENT_EMAIL_LABEL"
		       description="COM_MASSMAILER_RECIPIENT_EMAIL_DESC"
		       class="inputbox foxtext"
		       default=""
		       maxlength="200"
		       size="40"
		       type="text" />
		<field name="gender"
		       label="COM_MASSMAILER_RECIPIENT_GENDER_LABEL"
		       description="COM_MASSMAILER_RECIPIENT_GENDER_DESC"
		       class="inputbox required foxtext"
		       default=""
		       size="1"
		       type="list">
			<option value="">-- Seleccionar --</option>
			<option value="F">Femenino</option>
			<option value="M">Masculino</option>
		</field>
		<field name="date_of_birth"
		       label="COM_MASSMAILER_RECIPIENT_DATE_OF_BIRTH_LABEL"
		       description="COM_MASSMAILER_RECIPIENT_DATE_OF_BIRTH_DESC"
		       class="inputbox foxtext"
		       default=""
		       format="%Y-%m-%d"
		       size="40"
		       type="calendar" />
		<field name="neighborhood"
		       label="COM_MASSMAILER_RECIPIENT_NEIGHBORHOOD_LABEL"
		       description="COM_MASSMAILER_RECIPIENT_NEIGHBORHOOD_DESC"
		       class="inputbox foxtext"
		       default=""
		       maxlength="100"
		       size="40"
		       type="text" />
	</fieldset>
</form>